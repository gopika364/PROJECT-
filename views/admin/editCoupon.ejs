<%- include('header') -%>

<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div style="width: 100%;" class="col-sm-12 col-xl-6">
      <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">EDIT COUPON</h6>

        <% if (message) { %>
          <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert" id="alert">
            <strong><%= message.message %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <form class="mt-5" method="post" action="/admin/updateCoupon/<%= coupon._id %>">
          <div class="mb-3">
            <label for="UrunAdi" class="form-label">code</label>
            <input name="code" type="text" class="form-control" id="UrunAdi" value="<%= coupon.code %>" required>
            <small>Alphanumeric characters only</small>
          </div>
          <div class="mb-3">
            <label for="UrunAdi" class="form-label">discount</label>
            <input placeholder="100%" max="100" min="0" name="discount" type="number" class="form-control" id="UrunAdi" value="<%= coupon.discount %>" required>
            <small>Numeric value only</small>
          </div>
          <div class="mb-3">
            <label class="form-label" for="UrunMiktar">minvalue</label>
            <input min="0" name="minValue" type="number" class="form-control" id="UrunMiktar" value="<%= coupon.minValue %>" required>
            <small>Numeric value only</small>
          </div>
          <div class="mb-3">
            <label for="UrunAdi" class="form-label">expirydate</label>
            <input name="expiryDate" type="date" class="form-control" id="UrunAdi" value="<%= coupon.expiryDate %>" required>
            <small id="expiryDateError" style="color: red;"></small>
          </div>
          <div class="mb-3">
            <label for="UrunAdi" class="form-label">description</label>
            <input name="description" type="text" class="form-control" id="UrunAdi" value="<%= coupon.description %>" required>
          </div>
          
          <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">UPDATE COUPON</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('footer') -%>

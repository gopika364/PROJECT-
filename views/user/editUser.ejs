<%-include('header')-%>

<button id="edit-profile" class="btn btn-secondary"> <a href="/userProfile" style="color: white;">GO BACK</a> </button>
<form  id="edit-profile-form" action="/updateUser" method="POST">
    <section style="background-color: #000000; height: 50vh; display: flex; align-items: center;">
        <div class="container">
            <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <form id="edit-profile-form">
                            <div style="background-color: black;padding: 5px;margin-bottom: 15px; text-align: center;">
                                <h2 style="color: white;margin-top: 10px;">EDIT DETAILS</h2>
                            </div>
                            <div class="row mb-3">
                                <label for="name" class="col-sm-3 col-form-label">Full Name</label>
                                <div class="col-sm-9">
                                    <input type="text" name="name" class="form-control" id="name" value="<%= user.name %>" required>
                                    <div id="name-error" style="color: red;"></div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="email" class="col-sm-3 col-form-label">Email</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="email" value="<%= user.email %>" readonly required>
                                </div>
                            </div>
                            <!-- <button type="button" id="enable-edit" class="btn btn-secondary">Enable Edit</button> -->
                            <button type="submit" class="btn btn-primary" >Save Changes</button>                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>

<script>
    document.getElementById('edit-profile-form').addEventListener('submit', function (event) {
        var nameInput = document.getElementById('name');
        var nameError = document.getElementById('name-error');
        
        
        if (nameInput.value.trim() === '') {
            nameError.textContent = 'Full Name is required';
            event.preventDefault(); 
        } else {
            nameError.textContent = ''; 
        }
    });
</script>



<%-include('footer')-%>
